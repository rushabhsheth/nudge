<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorBackground"
    android:orientation="horizontal">


    <!--View for holding Profile Image-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="0dp"
        android:background="@color/colorBackground"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/free_contactsImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:civ_border_color="@color/colorMaterialGrey"
            app:civ_border_width="0dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/free_greenCirleImageView"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/green_square"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="1dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/free_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:textColor="@color/colorTextLight"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/free_nudgeBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_nudge_plain" />

        <!--<ImageButton-->
            <!--android:id="@+id/free_messageBtn"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_gravity="right|center_vertical"-->
            <!--android:background="@drawable/ic_message_plain" />-->


        <!--<ImageButton-->
            <!--android:id="@+id/free_callBtn"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginRight="0dp"-->
            <!--android:layout_gravity="right|center_vertical"-->
            <!--android:background="@drawable/ic_call_plain" />-->

    </LinearLayout>

</LinearLayout>